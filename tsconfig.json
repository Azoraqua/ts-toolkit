{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "incremental": true,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "rootDir": "src",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "types": ["node", "jest"]
  },
  "exclude": ["dist", "node_modules", "src/__tests__"],
  "include": ["src"]
}